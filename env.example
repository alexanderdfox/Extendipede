# Extendipede Web Production Environment Configuration

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=4

# Security Configuration
COMMAND_TIMEOUT=30
MAX_COMMAND_LENGTH=1000
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
REDIS_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=50 per hour

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=logs/extendipede.log
ACCESS_LOG=logs/access.log
ERROR_LOG=logs/error.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL Configuration (for Nginx)
SSL_CERTFILE=/etc/nginx/ssl/cert.pem
SSL_KEYFILE=/etc/nginx/ssl/key.pem

# Database (for future features)
DATABASE_URL=postgresql://user:password@localhost/extendipede

# Docker Configuration
RELOAD=false
PID_FILE=logs/gunicorn.pid
USER=appuser
GROUP=appuser
